@{
  Layout = "_Layout";
}

@using BestRestaurants.Models;
@model List<BestRestaurants.Models.Restaurant>

<h1>Search Results</h1>

@if(Model.Count == 0)
{
  <p>No restaurants match this search</p>
}

else
{
  <ul>
  @foreach (Restaurant restaurant in Model)
  {
      <li>@Html.ActionLink($"{restaurant.Name}", "Details", new {id = restaurant.RestaurantId}) : @restaurant.Location</li>
  }
  </ul>
}