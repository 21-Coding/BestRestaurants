@{
  Layout = "_Layout";
}

@using BestRestaurants.Models;
@model List<BestRestaurants.Models.Restaurant>;

<div class="col-md-8 offset-md-2">
  <h1>Restaurants</h1>
</div>
<hr>

@if (@Model.Count == 0)
{
  <h3>No restaurants have been added yet!</h3>
} 
<div class="col-md-8 offset-md-2">
  @foreach (Restaurant restaurant in Model)
  {
    <li>@Html.ActionLink($"{restaurant.Name}", "Details", new { id = restaurant.RestaurantId }) : @restaurant.Location
      @for (var i=1; i < restaurant.Rating; i++)
      {
       <span class="fa fa-star"></span>
      }
    </li>    
    <hr>
  }
</div>
