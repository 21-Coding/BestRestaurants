
@{
  Layout = "_Layout";
}

@model BestRestaurants.Models.Restaurant

<h2 class="text-center">Edit</h2>
<div class="col-md-6 offset-md-3">
<h4 class="text-center">Edit this entry: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
  <div class="form-group">
    @Html.HiddenFor(model => model.RestaurantId)
  </div>
  <div class="form-group">
    @Html.LabelFor(model => model.Name)
    @Html.EditorFor(model => model.Name, new { @class = "form-control"})
  </div>
  <div class="form-group">
    @Html.LabelFor(model => model.Location)
    @Html.EditorFor(model => model.Location, new { @class = "form-control"})
    </div>
  <div class="form-group">
    @Html.LabelFor(model => model.Rating)
    @Html.EditorFor(model => model.Rating, new { @class = "form-control"})
  </div>
  <div class="form-group">
    @Html.LabelFor(model => model.Review)
    @Html.EditorFor(model => model.Review, new { @class = "form-control"})
    </div>
  <div class="form-group">
    @Html.LabelFor(model => model.Cuisine)
    @Html.DropDownList("CuisineId")
  </div>
    <input type="submit" value="Save" class="btn btn-default">
}

